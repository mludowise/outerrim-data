{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "job_encounter.json#",
  "title": "Schema for job encounter cards",
  "type": "object",
  "properties": {
    "name": {
      "description": "Name of the job, as written on the card itself.",
      "type": "string",
      "minLength": 1
    },
    "steps": {
      "description": "Steps of this job encounter, in order. The first step is step #1, the second is step #2, and so on.",
      "type": "array",
      "items": {
        "description": "Step of this job encounter",
        "type": "object",
        "properties": {
          "description": {
            "description": "Description of the step, as written on the card itself.",
            "type": "string",
            "minLength": 1
          },
          "instructions": {
            "description": "Instructions for this step, as written on the card itself.",
            "$ref": "definitions.json#/definitions/icon_containing_text"
          }
        },
        "required": [
          "description",
          "instructions"
        ],
        "additionalProperties": false
      },
      "minItems": 1
    }
  },
  "required": [
    "name",
    "steps"
  ],
  "additionalProperties": false
}