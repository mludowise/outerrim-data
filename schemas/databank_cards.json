{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "jobs.json#",
  "title": "Schema for job cards",
  "definitions": { },
  "type": "array",
  "items": {
    "type": "object",
    "allOf": [
      {
        "properties": {
          "number": {
            "description": "The number of this card.",
            "type": "integer",
            "minimum": 1
          },
          "starting_planet": {
            "description": "If this is a setup card for a character, that character's starting planet.",
            "$ref": "definitions.json#/definitions/planet"
          }
        }
      },
      {
        "oneOf": [
          {
            "properties": {
              "job": {
                "$ref": "job.json"
              }
            },
            "required": ["job"]
          },
          {
            "properties": {
              "cargo": {
                "$ref": "cargo.json"
              }
            },
            "required": ["cargo"]
          },
          {
            "properties": {
              "bounty": {
                "$ref": "bounty.json"
              }
            },
            "required": ["bounty"]
          },
          {
            "properties": {
              "job_encounter": {
                "$ref": "job_encounter.json"
              }
            },
            "required": ["job_encounter"]
          },
          {
            "properties": {
              "job_resolution": {
                "$ref": "job_resolution.json"
              }
            },
            "required": ["job_resolution"]
          },
          {
            "properties": {
              "contact": {
                "$ref": "contact.json"
              }
            },
            "required": ["contact"]
          },
          {
            "properties": {
              "cargo_delivery": {
                "$ref": "cargo_delivery.json"
              }
            }
          }
        ]
      }
    ],
    "additionalProperties": false,
    "required": [
      "number"
    ]
  }
}