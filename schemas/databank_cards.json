{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "jobs.json#",
  "title": "Schema for job cards",
  "definitions": {
    "card": {
      "allOf": [
        {
          "properties": {
            "starting_planet": {
              "description": "If this is a setup card for a character, that character's starting planet.",
              "$ref": "definitions.json#/definitions/planet"
            }
          }
        },
        {
          "oneOf": [
            {
              "properties": {
                "bounty": {
                  "$ref": "bounty.json"
                }
              },
              "required": ["bounty"]
            },
            {
              "properties": {
                "cargo": {
                  "$ref": "cargo.json"
                }
              },
              "required": ["cargo"]
            },
            {
              "properties": {
                "cargo_delivery": {
                  "$ref": "cargo_delivery.json"
                }
              },
              "required": ["cargo_delivery"]
            },
            {
              "properties": {
                "contact": {
                  "$ref": "contact.json"
                }
              },
              "required": ["contact"]
            },
            {
              "properties": {
                "job": {
                  "$ref": "job.json"
                }
              },
              "required": ["job"]
            },
            {
              "properties": {
                "job_resolution": {
                  "$ref": "job_resolution.json"
                }
              },
              "required": ["job_resolution"]
            }
          ]
        }
      ],
      "additionalProperties": false
    }
  },
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "number": {
        "description": "The number of this card.",
        "type": "integer",
        "minimum": 1
      },
      "cards": {
        "description": "Cards in the deck corresponding to this number.",
        "type": "array",
        "items": {
          "$ref": "#/definitions/card"
        }
      }
    },
    "additionalProperties": false,
    "required": [
      "number",
      "cards"
    ]
  }
}